    private void btn_crypterActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here
        chaineSource=jtaSource.getText();
        if(chaineSource.equals(""))
            JOptionPane.showMessageDialog(this,"La chaine source est vide !");
        else
        {
            chaineDest="";
            int x,y;
            for(int i=0;i<chaineSource.length();i++)
            {
               
               x=(int)chaineSource.charAt(i);
             
               if(x==10)
                   chaineDest=chaineDest+'\n';
               else
               { y=(int) (puissance(x,b,m));
                          
               chaineDest=chaineDest+(char)y;
               }
                             
            }
            jtaDest.setText(chaineDest);
        }
    }                                           

    private void btn_decrypterActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        chaineSource=jtaSource.getText();
        if(chaineSource.equals(""))
            JOptionPane.showMessageDialog(this,"La chaine source est vide !");
        else
        {
            chaineDest="";
            int x,y;
            for(int i=0;i<chaineSource.length();i++)
            {
               y=(int)chaineSource.charAt(i);
               
               
               if(y==10)
                   chaineDest=chaineDest+'\n';
               else
               { x=(int) (puissance(y,a,m));
               chaineDest=chaineDest+(char)x;
               
            }
            }
            jtaDest.setText(chaineDest);
        }
    }                                             

    private void btn_effacerActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        jtaSource.setText("");
        jtaDest.setText("");
    }                                           

    private void btn_initActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        this.dispose();
        acceuil ac=new acceuil();
        ac.setVisible(true);
    }                                        


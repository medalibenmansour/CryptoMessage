    public int puissance(int h,int j,int k)
    {
        int z=1;
        String s;
        s=Integer.toBinaryString(j);
        
        for(int i=0;i<s.length();i++)
        {
            z=(z*z) % k;
            if(s.charAt(i)=='1')
                z=(z*h) % k;
        }
        return z;
    }

